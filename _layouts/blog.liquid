<!DOCTYPE html>
<html>
  {% include "head.liquid" %}
  <body>
    {% include "header.liquid" %}
    <div class="page-content">
      <div class="wrapper">
        
        <article class="post" itemscope itemtype="http://schema.org/BlogPosting">
          <header class="post-header">
            <h1 class="post-title" itemprop="name headline">{{ page.title }}</h1>
            <p class="post-meta">
               <time datetime="{{ page.published_date }}" itemprop="datePublished">
                  {{ page.published_date | date: "%b %-d, %Y" }}
               </time>
               {% if page.author %} |
                  <span itemprop="author" itemscope itemtype="http://schema.org/Person">
                    <span itemprop="name">{{ page.author }}</span>
                  </span>
               {% endif %}
                | <span class="time">
                    {{ page.content | split:" " | size | divided_by:180 }}
                  </span>
                   Minute Read
            </p>
          </header>
          <div class="post-content" itemprop="articleBody">
            {{ page.content }}
          </div>
          <footer class="post-footer">
          
            <!-- Post Navigation -->
            {% assign is_next_post_found = false %}
            {% assign find_prev_post = false %}

            {% for post in collections.posts.pages %}
              {% if post.categories contains "blog" %}
                  {% if post.permalink == page.permalink %}
                    {% assign is_next_post_found = true %}
                    {% assign find_prev_post = true %}
                  {% else %}
                    {% if is_next_post_found == false %}
                      {% assign next_post = post.permalink %}
                    {% endif %}
                    {% if find_prev_post %}
                      {% assign prev_post = post.permalink %}
                      {% assign find_prev_post = false %}
                    {% endif %}
                  {% endif %}
                {% endif %}
            {% endfor %}

            <div class="post-navigation">
              {% if prev_post %}
                <a class="next" href="{{ prev_post | prepend: '/' | prepend: site.base_url }}">←&nbsp;Prev Post</a>
              {% endif %}
              {% if next_post %}
                <a class="prev" href="{{ next_post | prepend: '/' | prepend: site.base_url }}">Next Post&nbsp;→</a>
              {% endif %}
            </div>
          </footer>
        
        </article>

      </div>
    </div>
    {% include "footer.liquid" %}
    {% include "scripts.liquid" %}
  </body>
</html>
